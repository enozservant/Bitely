<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.bitelyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_main_screen_logged"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyFriendActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeScreenGuest"
            android:label="@string/title_activity_main_screen_guest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrendingActivity"
            android:label="TrendingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogoutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RestaurantInfoActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".BiteMeActivity"
            android:label="@string/title_activity_bite_me"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.bitelyapp.HomeScreen" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreatListActivity"
            android:label="@string/title_activity_creat_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MylistActivity"
            android:label="@string/title_activity_creat_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>