<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.bitelyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.finalproject.bitelyapp.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalproject.bitelyapp.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.finalproject.bitelyapp.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.finalproject.bitelyapp.MainScreenLogged"
            android:label="@string/title_activity_main_screen_logged"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.finalproject.bitelyapp.BiteMeActivity"
            android:label="BiteMe"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>
