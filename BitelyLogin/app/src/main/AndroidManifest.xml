<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.bitelyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".LogoutActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_main_screen_logged"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".HomeScreenGuest"
            android:label="Bitely Guest"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".BiteMeActivity"
            android:label="Bite Me"
            android:theme="@style/AppTheme.Dark">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.bitelyapp.HomeScreen" />
        </activity>
        <activity
            android:name=".MylistActivity"
            android:label="MyListActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CreateListActivity"
            android:label="Creat Your Bite List"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".IndividualListActivity"
            android:label="IndividualListActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".TrendingActivity"
            android:label="TrendingActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".RestaurantInfoActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".MyFriendActivity"
            android:label="MyFriendActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".IndividualUserActivity"
            android:label="IndividualUserActivity"
            android:theme="@style/AppTheme.Dark"/>
        <activity
            android:name=".IndividualListForOtherUsersActivity"
            android:label="IndividualListForOtherUsersActivity"
            android:theme="@style/AppTheme.Dark"/>
        <activity
            android:name=".SearchActivity"
            android:label="SearchActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".UserProfileActivity"
            android:label="UserProfile"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".RestaurantInfoActivity_2"
            android:label="RestaurantInfoActivity_2"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>